<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:padding="16sp"
            android:layout_height="72sp"
            android:layout_gravity="center"
            android:layout_marginRight="15sp"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="5sp"
            android:layout_marginTop="5sp"
            card_view:cardCornerRadius="1dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/performer_avatar_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="5sp"
                    android:scaleType="center"
                    android:src="@mipmap/ic_test_image_round" />

                <TextView
                    android:id="@+id/performer_name_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="5sp"
                    android:layout_toEndOf="@+id/performer_avatar_imageview"

                    android:text="TextView"
                    android:textSize="24sp"
                    tools:text="User 1" />

                <TextView
                    android:id="@+id/performer_review_counter_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@+id/performer_avatar_imageview"
                    android:layout_margin="5sp"

                    android:text="TextView"
                    android:textSize="14sp"
                    tools:text="Review:3" />

                <RatingBar
                    android:id="@+id/performer_ratingbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:numStars="5"
                    android:layout_margin="5sp"
                    android:rating="3"
                    style="?android:attr/ratingBarStyleSmall" />

            </RelativeLayout>



        </android.support.v7.widget.CardView>

</LinearLayout>